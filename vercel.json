{
  "version": 2,
  "name": "bee2beep-frontend",
  "buildCommand": "",
  "installCommand": "",
  "framework": null,
  "outputDirectory": "public",
  "rewrites": [
    { "source": "/api/:path*", "destination": "http://167.71.176.127:3000/api/:path*" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ]
}
